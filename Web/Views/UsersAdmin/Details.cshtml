@model Web.Models.EditUserViewModel

@{
    ViewBag.Title = "Details";
}


<script type="text/javascript">
        $(document).ready(
            function () {
                $("#txt1").html("User's Account Info ");
                $("#txt2").html("(details of user's account)");
                //$("#txtWarning").html("System failure imminent, carefully change COMPUTE TYPE & CLASS HIERARCHY under strict change request, and only when agreed and advised by the SCHOOL ADMINISTRATORS!");
        });
</script>

<div class="col-md-4">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">USER DETAIL</h4>
            <div class="panel-options">

            </div>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                <div>
                    User's Role
                </div>
                @*@Html.Label("Roles", new { @class = "control-label" })*@
                <ol>
                    @foreach (var item in Model.RolesList)
                    {
                        <li>
                            <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" disabled="disabled" />
                            @Html.Label(item.Value, new { @class = "control-label" })
                        </li>
                    }
                </ol>
            </div>

        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>


