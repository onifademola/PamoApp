@model Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Create New User";
}


<script type="text/javascript">
    $(document).ready(
        function () {
            $("#txt1").html("Create new user account ");
            $("#txt2").html("(create users login credentials)");
            //$("#txtWarning").html("System failure imminent, carefully change COMPUTE TYPE & CLASS HIERARCHY under strict change request, and only when agreed and advised by the SCHOOL ADMINISTRATORS!");
        });
</script>

@using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

<div class="col-md-4">
 
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">NEW USER ACCOUNT</h4>
        <div class="panel-options">

        </div>
    </div>
    <div class="panel-body">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-error" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "  control-label" })
            <div  >
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "  control-label" })
            <div  >
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "  control-label" })
            <div  >
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "  control-label" })
            <div  >
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">
                Select User Role
            </label>
            <div  >
                @foreach (var item in (SelectList)ViewBag.RoleId)
                {
                    <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label" })
                }
            </div>
        </div>
        <div class="form-group">
            <div> @*class="btn btn-block btn-primary" input type="submit" value="Create User" >*@
                @*<i class="el-play"></i>
                Create User*@
                <input type="submit" value="Create User" class="btn btn-block btn-primary" />
            </div>
        </div>
        </div>
    </div>
</div>
        
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
