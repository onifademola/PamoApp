        <script>
            function filterData() { //AttdID
                var grid = $("#GridOPD").data("kendoGrid");
                var selectedItem = grid.dataItem(grid.select());
                if (selectedItem != null) {
                    return {
                        patientID: selectedItem.AttdPatientID
                    };
                } else {
                    return {
                        patientID: 0
                    };
                }
            };
        </script>
