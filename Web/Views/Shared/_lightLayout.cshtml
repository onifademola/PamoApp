    <link rel="stylesheet" href="~/layout_assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/layout_assets/css/xenon-core.css">
    <link rel="stylesheet" href="~/layout_assets/css/xenon-forms.css">
