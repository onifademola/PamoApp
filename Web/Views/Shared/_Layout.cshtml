
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Xenon Boostrap Admin Panel" />
    <meta name="author" content="" />

    <title>Xenon - Collapsed Sidebar</title>

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Arimo:400,700,400italic">
    <link rel="stylesheet" href="~/layout_assets/css/fonts/linecons/css/linecons.css">
    <link rel="stylesheet" href="~/layout_assets/css/fonts/fontawesome/css/font-awesome.min.css">
    <link href="~/layout_assets/css/fonts/elusive/css/elusive.css" rel="stylesheet" />
    <link href="~/layout_assets/css/fonts/elusive/css/animation.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/layout_assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/layout_assets/css/xenon-core.css">
    <link rel="stylesheet" href="~/layout_assets/css/xenon-forms.css">
    <link rel="stylesheet" href="~/layout_assets/css/xenon-components.css">
    <link rel="stylesheet" href="~/layout_assets/css/xenon-skins.css">
    <link rel="stylesheet" href="~/layout_assets/css/custom.css">
    <script src="~/layout_assets/js/jquery-1.11.1.min.js"></script>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-3.1.0.js"></script>
    <script src="~/Scripts/kendo/jquery.min.js"></script>
    <script src="~/Scripts/kendo/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/kendo.aspnetmvc.min.js"></script>
    <script src="~/Scripts/kendo/jszip.min.js"></script>


    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.min.js"></script>


    <script src="~/Scripts/custom/notificationJs.js"></script>
    <link href="~/Scripts/custom/notificationStyle.css" rel="stylesheet" />


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body class="page-body">
   
    <div class="page-container">
        <div class="settings-pane">

            <a href="#" data-toggle="settings-pane" data-animate="true">
                &times;
            </a>

            <div class="settings-pane-inner">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="row">

                        <div class="col-md-4">

                            <div class="user-info">

                                <div class="user-image">
                                    <a href="extra-profile.html">
                                        <img src="~/layout_assets/images/user-2.png" class="img-responsive img-circle" />
                                    </a>
                                </div>

                                <div class="user-details">

                                    <h3>
                                        <a href="/Manage/Index">@User.Identity.GetUserName()</a>

                                        <!-- Available statuses: is-online, is-idle, is-busy and is-offline -->
                                        <span class="user-status is-online"></span>
                                    </h3>

                                    <p class="user-title">App User</p>

                                    <div class="user-links">
                                        <a href="/Manage/Index" class="btn btn-success">Edit Profile</a>
                                        @*<a href="extra-profile.html" class="btn btn-success">Upgrade</a>*@
                                    </div>

                                </div>

                            </div>

                        </div>

                        <div class="col-md-8 link-blocks-env">

                            <div class="links-block left-sep">
                                <h4>
                                    <span>Account</span>
                                </h4>

                                <ul class="list-unstyled">
                                    <li>
                                        <a href="/Manage/Index">
                                            <i class="fa-angle-right"></i>
                                            Settings
                                        </a>
                                    </li>
                                    <li>
                                        .
                                    </li>
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <li>
                                            <a href="javascript:document.getElementById('logoutForm').submit()">
                                                <i class="el-off"></i>
                                                Logout
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <a href="#" data-toggle="chat">
                                            <i class="fa-comments-o"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <div class="links-block left-sep">
                                <h4>
                                    <a href="#">
                                        <span>Help Desk</span>
                                    </a>
                                </h4>

                                <ul class="list-unstyled">
                                    <li>
                                        <a href="https://sim4eaglesbyte.freshdesk.com/support/home" target="_blank">
                                            <i class="fa-info"></i>
                                            Help
                                        </a>
                                    </li>

                                    <li>
                                        <a href="#">
                                            <i class="fa-angle-right"></i>
                                            Facebook
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-angle-right"></i>
                                            Twitter
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa-angle-right"></i>
                                            Google
                                        </a>
                                    </li>
                                </ul>
                            </div>

                        </div>

                    </div>
                }
            </div>

        </div>
        <div class="main-content">
            <nav class="navbar horizontal-menu navbar-fixed-top navbar-minimal">
                <!-- set fixed position by adding class "navbar-fixed-top" -->

                <div class="navbar-inner">

                    <!-- Navbar Brand -->
                    <div class="navbar-brand">
                        <a href="/Home/Index" class="logo">
                            <img id="myCanvas" src="" alt="" class="hidden-xs img-responsive img-circle" width="45" />
                            <img id="myCanvas" src="" alt="" class="visible-xs img-responsive img-circle" width="45" />
                        </a>
                        <a href="/Home/Index" class="logo">
                            <h4 style="font-family:'Arial Rounded MT'">SIM</h4>
                        </a>
                        @*<a href="#" data-toggle="settings-pane" data-animate="true">
                                <i class="linecons-cog"></i>
                            </a>*@
                    </div>

                    <!-- Mobile Toggles Links -->
                    <div class="nav navbar-mobile">

                        <!-- This will toggle the mobile menu and will be visible only on mobile devices -->
                        <div class="mobile-menu-toggle">
                            <!-- This will open the popup with user profile settings, you can use for any purpose, just be creative -->
                            <a href="#" data-toggle="settings-pane" data-animate="true">
                                <i class="el-cog"></i>
                            </a>

                            <a href="#" data-toggle="user-info-menu-horizontal">
                                <i class="el-user"></i>
                            </a>

                            <!-- data-toggle="mobile-menu-horizontal" will show horizontal menu links only -->
                            <!-- data-toggle="mobile-menu" will show sidebar menu links only -->
                            <!-- data-toggle="mobile-menu-both" will show sidebar and horizontal menu links -->
                            <a href="#" data-toggle="mobile-menu-horizontal">
                                <i class="el-th"></i>
                            </a>
                        </div>

                    </div>

                    <div class="navbar-mobile-clear"></div>



                    <!-- main menu -->

                    @Html.Partial("_PartialPageMainMenu")


                    <!-- notifications and other links -->
                    <ul class="nav nav-userinfo navbar-right">

                        <li class="search-form">
                            <!-- You can add "always-visible" to show make the search input visible -->

                            <form name="userinfo_search_form" method="get" action="extra-search.html">
                                <input type="text" name="s" class="form-control search-field" placeholder="Type to search..." />

                                <button type="submit" class="btn btn-link">
                                    <i class="linecons-search"></i>
                                </button>
                            </form>

                        </li>
                        <li><a href="/Home/Index"><i class="el-home-circled"></i>Home</a></li>
                        @using Microsoft.AspNet.Identity
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown user-profile">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <img src="~/layout_assets/images/user-4.png" alt="user-image" class="img-circle img-inline userpic-32" width="28" />
                                    <span>
                                        @User.Identity.GetUserName()
                                        @*@Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage")*@
                                        <i class="fa-angle-down"></i>
                                    </span>
                                </a>

                                <ul class="dropdown-menu user-profile-menu list-unstyled">

                                    @*<li>
                                            <a href="#settings">
                                                <i class="fa-wrench"></i>
                                                Settings
                                            </a>
                                        </li>*@
                                    <li>
                                        <a href="/Manage/Index">
                                            <i class="fa-user"></i>
                                            Profile
                                        </a>
                                    </li>
                                    
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post,
                                        new { id = "logoutForm" }))
                                    //new { id = "logoutForm", @class = "navbar-right" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <li class="last">
                                            <a href="javascript:document.getElementById('logoutForm').submit()">
                                                <i class="el-off"></i>
                                                Logout
                                            </a>
                                        </li>
                                    }
                                    
                                </ul>
                            </li>
                            <li style="min-height: 76px;">
                                <a href="#" data-toggle="chat">
                                    <i class="fa-comments-o"></i>
                                </a>
                            </li>
                        }
                    </ul>

                </div>

            </nav>

            @Html.Partial("_PartialPageHeader")
            <div class="row">
                @RenderBody()
            </div>
            <footer class="main-footer sticky footer-type-1">

                <div class="footer-inner">

                    <!-- Add your copyright text here -->
                    <div class="footer-text">
                        <p>&copy; @DateTime.Now.Year - SIM (School Information Manager), a product of  <a href="http://www.eaglesbyte.org" target="_blank">Eaglesbyte Innovations</a></p>
                    </div>


                    <!-- Go to Top Link, just add rel="go-top" to any link to add this functionality -->
                    <div class="go-up">

                        <a href="#" rel="go-top">
                            <i class="fa-angle-up"></i>
                        </a>

                    </div>

                </div>

            </footer>

        </div>
        <!--CHAT SIDE BAR-->
        @Html.Partial("_PartialPageChat")
    </div>

    
    
    <!--FOOTER CHAT-->
    @Html.Partial("_PartialPageFooterChat")
    
    <!-- Bottom Scripts -->
    <script src="~/layout_assets/js/bootstrap.min.js"></script>
    <script src="~/layout_assets/js/TweenMax.min.js"></script>
    <script src="~/layout_assets/js/resizeable.js"></script>
    <script src="~/layout_assets/js/joinable.js"></script>
    <script src="~/layout_assets/js/xenon-api.js"></script>
    <script src="~/layout_assets/js/xenon-toggles.js"></script>


    <!-- JavaScripts initializations and stuff -->
    <script src="~/layout_assets/js/xenon-custom.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>