@{
    Layout = "~/Views/Shared/_lightLayout.cshtml";
}


@using Web.Models
@model LoginViewModel

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { role = "form", id = "login", @class = "login-form fade-in-effect" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label" for="Email">Email</label>
        <input type="text" class="form-control input-dark" name="Email" id="email" autocomplete="off" />
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
            <div class="form-group">
                <label class="control-label" for="Password">Password</label>
                <input type="Password" class="form-control input-dark" name="Password" id="password" autocomplete="off" />
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

